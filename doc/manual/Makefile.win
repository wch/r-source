	  $(PDFLATEX) '\nonstopmode\input{refman.tex}'
	@$(MAKEINDEX) refman
	@TEXINPUTS="../../share/texmf:$$TEXINPUTS" \
	  $(PDFLATEX) '\nonstopmode\input{refman.tex}'
	@TEXINPUTS="../../share/texmf:$$TEXINPUTS" \
	  $(PDFLATEX) '\nonstopmode\input{refman.tex}'
else
	@TEXINPUTS="../../share/texmf;$$TEXINPUTS" \
	  $(PDFLATEX) '\nonstopmode\input{refman.tex}'
	@$(MAKEINDEX) refman
	@TEXINPUTS="../../share/texmf;$$TEXINPUTS" \
	  $(PDFLATEX) '\nonstopmode\input{refman.tex}'
	@TEXINPUTS="../../share/texmf;$$TEXINPUTS" \
