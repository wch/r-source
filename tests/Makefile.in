	-@for d in $(SUBDIRS); do \
	  (cd $${d} && $(MAKE) $@); \
	done
	-@rm -f stamp-R Makedeps Rplot* Rprof.out *.Rd data dumpdata.R \
	  reg-plot.ps reg-tests-2.ps
