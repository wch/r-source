	    (cd Packages && $(TAR) xf -) ; \
	  if grep "^Contains:" "Packages/$${p}/DESCRIPTION" >/dev/null; \
	  then \
	    echo "checking bundle '$${p}'"; \
	  else \
	    echo "checking package '$${p}'"; \
	  fi; \
	  R_LIBS= $(top_builddir)/bin/R CMD check --install=skip \
	    --library="$(top_builddir)/library" Packages/$${p} || echo; \
	done

