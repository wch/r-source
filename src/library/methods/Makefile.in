#
# ${R_HOME}/src/library/methods/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../..
subdir = src/library/methods

include $(top_builddir)/Makeconf
distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
DISTFILES = LICENSE DESCRIPTION.in Makefile.in NAMESPACE install.R

pkg = methods

R_EXE = $(top_builddir)/bin/R --vanilla

all: Makefile DESCRIPTION
	@echo "building package '$(pkg)'"
	@$(MKINSTALLDIRS) $(top_builddir)/library/$(pkg)/R
	@(f=$${TMPDIR:-/tmp}/R$$$$; \
          echo ".packageName <- \"$(pkg)\"" >  $${f}; \
	  cat `LC_COLLATE=C ls $(srcdir)/R/*.R` >> $${f}; \
	  $(SHELL) $(top_srcdir)/tools/move-if-change $${f} all.R)
	@for f in COPYRIGHTS INDEX SOURCES NAMESPACE; do \
	  if test -f $(srcdir)/$${f}; then \
	    $(INSTALL_DATA) $(srcdir)/$${f} \
	      $(top_builddir)/library/$(pkg); \
	  fi; \
	done
	@if test -f DESCRIPTION; then \
	  $(INSTALL_DATA) DESCRIPTION $(top_builddir)/library/$(pkg); \
	  (tmp="Built: R $(VERSION); "; \
	    if test -d $(srcdir)/src; then \
	      tmp="$${tmp}$(R_PLATFORM)"; \
	    fi; \
	    tmp="$${tmp}; `date`; $(R_OSTYPE)"; \
	    echo "$${tmp}") \
	    >> $(top_builddir)/library/$(pkg)/DESCRIPTION; \
	fi
	@if test -d $(srcdir)/man; then \
	  $(MKINSTALLDIRS) $(top_builddir)/library/$(pkg)/man; \
	  (f=$${TMPDIR:-/tmp}/R$$$$; \
	    for rdfile in $(srcdir)/man/*.Rd; do \
	      echo "% --- Source file: $${rdfile} ---"; \
	      cat $${rdfile}; echo '\eof'; \
	    done >> $${f}; \
	    $(SHELL) $(top_srcdir)/tools/move-if-change $${f} \
	      $(top_builddir)/library/$(pkg)/man/$(pkg).Rd); \
	fi
	@if test -d src; then \
	  (cd src && $(MAKE)) || exit 1; \
	fi
	@$(MAKE) Rfiles
	@$(MAKE) RfilesLazy

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@cd $(top_builddir) && $(SHELL) ./config.status $(subdir)/$@
DESCRIPTION: $(srcdir)/DESCRIPTION.in $(top_builddir)/config.status
	@cd $(top_builddir) && $(SHELL) ./config.status $(subdir)/$@

RfilesLazy: $(top_builddir)/library/$(pkg)/R/$(pkg).rdb

$(top_builddir)/library/$(pkg)/R/$(pkg).rdb: $(top_builddir)/library/$(pkg)/R/all.rda
	@echo "tools:::makeLazyLoading(\"$(pkg)\")" | \
	  R_DEFAULT_PACKAGES=NULL LC_COLLATE=C $(R_EXE) --slave > /dev/null
	@cat /dev/null > $(top_builddir)/library/$(pkg)/R/all.rda
	@touch $^

Rfiles: $(top_builddir)/library/$(pkg)/R/$(pkg) \
  $(top_builddir)/library/$(pkg)/R/all.rda

$(top_builddir)/library/$(pkg)/R/$(pkg): $(srcdir)/install.R
	@$(INSTALL_DATA) $(srcdir)/install.R $@

$(top_builddir)/library/$(pkg)/R/all.rda: all.R
	@rm -f $(top_builddir)/library/$(pkg)/Meta/nsInfo.rds
	@echo "dumping R code in package '$(pkg)'"
	@if test -f $(srcdir)/NAMESPACE; then \
	  $(INSTALL_DATA) all.R $(top_builddir)/library/$(pkg)/R/$(pkg); \
	  echo "loadNamespace(\"$(pkg)\")" | \
	    R_DEFAULT_PACKAGES=NULL \
	    $(top_builddir)/bin/R --vanilla --slave; \
	  $(INSTALL_DATA) $(top_srcdir)/share/R/nsrdaload.R \
	    $(top_builddir)/library/$(pkg)/R/$(pkg); \
	else \
	  (echo \
	    "options(save.image.defaults=list(compress=TRUE, safe=FALSE))"; \
	    cat all.R) | \
	    R_DEFAULT_PACKAGES=NULL LC_COLLATE=C $(R_EXE) --slave --save; \
	  $(INSTALL_DATA) .RData $@; \
	  $(INSTALL_DATA) $(top_srcdir)/share/R/firstlib.R \
	    $(top_builddir)/library/$(pkg)/R/$(pkg); \
	  if test -f $(top_builddir)/library/$(pkg)/NAMESPACE; then \
	    rm -f $(top_builddir)/library/$(pkg)/NAMESPACE; \
	  fi; \
	fi

mostlyclean: clean
clean:
	@if test -d src; then (cd src && $(MAKE) $@); fi
	-@rm -f all.R .RData
distclean:
	@if test -d src; then (cd src && $(MAKE) $@); fi
	-@rm -f Makefile DESCRIPTION
maintainer-clean: distclean

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
	done
	@for d in R data demo exec inst man src; do \
	  if test -d $(srcdir)/$${d}; then \
	    ((cd $(srcdir); \
	          $(TAR) -c -f - $(DISTDIR_TAR_EXCLUDE) $${d}) \
	        | (cd $(distdir); $(TAR) -x -f -)) \
	      || exit 1; \
	  fi; \
	done
