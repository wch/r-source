simpleInternals <- function(pos = "package:base") {
    names <- ls(pos = pos, all = T)
    if (length(names) == 0)
        character(0)
    else {
        fn <-  function(n)
            is.simpleInternal(get(n, pos = pos))
        names[sapply(names, fn)]
    }
}
