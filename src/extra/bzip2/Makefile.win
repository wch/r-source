#-*- Makefile -*-

include ../../gnuwin32/MkRules

all: makeMakedeps libbz2.a

CFLAGS=-I../../include $(OPTFLAGS)

CSOURCES= blocksort.c huffman.c crctable.c randtable.c compress.c \
          decompress.c bzlib.c
OBJS=$(CSOURCES:.c=.o)

libbz2.a: $(OBJS)

clean:
	$(RM) *.o *~ *.d Makedeps
distclean: clean
	@$(RM) libbz2.a

# Dependencies
DEPS=$(CSOURCES:.c=.d)

makeMakedeps: $(DEPS)
	@$(RM) Makedeps
	@cat $(DEPS) >> Makedeps

-include Makedeps
