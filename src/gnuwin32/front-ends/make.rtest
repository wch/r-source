#-*- Makefile -*-
include ../MkRules

LINKFLAGS=-Wl,--stack=0xA00000
ifdef DEBUG
  DEBUGFLAG=$(G_FLAG)
else
  DEBUGFLAG=
  LINKFLAGS+=-s
endif

CFLAGS=-Wall -O2 -pedantic

rtest-CFLAGS=-I.. -I../../include -I../../extra $(DEBUGFLAG)
Rtest.exe: rtest.o
	$(CC) $(LINKFLAGS) -o $@ rtest.o -L../../../bin -lR -lgraphapp

rtest.c: ../../include/Rversion.h

clean:
	$(RM) rtest.o Rtest.exe *~


